<Window x:Class="WindowsPresentationFramework.VerticalGridSplitter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Form1" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Background="Yellow" Grid.Row="0"/>
        <GridSplitter Name="splitter" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
        <Label Background="Green" Grid.Row="1"/>
    </Grid>
</Window>
