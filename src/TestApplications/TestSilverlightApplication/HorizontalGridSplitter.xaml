<controls:ChildWindow x:Class="TestSilverlightApplication.HorizontalGridSplitter"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           Width="400" Height="300" 
           Title="HorizontalGridSplitter">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <sdk:Label Background="Yellow" Grid.Column="0" />
        <controls:GridSplitter Grid.Column="0" Width="2" Name="Splitter" />
        <sdk:Label Background="Green" Grid.Column="1" />
    </Grid>
</controls:ChildWindow>