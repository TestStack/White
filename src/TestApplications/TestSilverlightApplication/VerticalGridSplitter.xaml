<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="TestSilverlightApplication.VerticalGridSplitter"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="VerticalGridSplitter">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <sdk:Label Background="Yellow" Grid.Row="0" />
        <sdk:GridSplitter Name="Splitter" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
        <sdk:Label Background="Green" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>