<Window x:Class="WpfTestApplication.DragAndDropTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="DragAndDropTestWindow" Height="300" Width="300">
  <StackPanel>
    <TextBox x:Name="TextBox" PreviewMouseDown="TextBox_OnPreviewMouseDown" />
    <Button Content="A Button" x:Name="Button" Drop="ButtonOnDrop" AllowDrop="True" />
    <Label x:Name="DragDropResults" />
  </StackPanel>
</Window>